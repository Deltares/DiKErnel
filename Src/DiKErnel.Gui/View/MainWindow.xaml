<mah:MetroWindow x:Class="DiKErnel.Gui.View.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" MinWidth="1024" MinHeight="768" Width="1024" Height="768"
                 Title="DiKErnel-gui" TitleCharacterCasing="Normal">
    <Grid Background="#E6E6E6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="24, 24, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <svgc:SvgViewbox Grid.Column="0" Width="110" Height="110" Source="/Resources/logo.svg"/>
            <Grid Column="1" Margin="30, 0, 0, 0" Width="70" Height="110">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Doel" Grid.Row="0" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Text="Versie" Grid.Row="1" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Text="Bedrijf" Grid.Row="2" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Text="Contact" Grid.Row="3" VerticalAlignment="Center" FontWeight="DemiBold"/>
            </Grid>
            <Grid Grid.Column="2" Margin="20, 0, 0, 0" Width="125" Height="110">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Demonstratie" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding VersionNumber}" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBlock Text="Deltares" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="mailto:dikernel@deltares.nl" RequestNavigate="OnRequestNavigate">dikernel@deltares.nl</Hyperlink>
                </TextBlock>
            </Grid>
            <Border Grid.Column="3" BorderThickness="1" BorderBrush="#d3d3d3" Margin="20, 0, 0, 0" Width="600" Height="110">
                <TextBlock Margin="10, 6, 10, 6" TextWrapping="Wrap" TextAlignment="Justify" FontSize="12">
                    <Bold>Disclaimer: </Bold>
                    De ALPHA versie van DiKErnel is nog in de testfase en zal op vele onderdelen nog moeten worden verbeterd en uitgebreid.
                    Het doel van deze ALPHA versie is om feedback te ontvangen op het huidige functioneren en om tekortkomingen te detecteren.
                    DiKErnel dient met de grootst mogelijke voorzichtigheid te worden geïnstalleerd en gebruikt. Op geen enkele manier mag er
                    worden vertrouwd op de beschikbare resultaten, de bijgeleverde softwaredocumentatie en al het andere materiaal dat bij
                    deze versie beschikbaar wordt gesteld.
                </TextBlock>
            </Border>
        </Grid>
        <Separator Grid.Row="1" Margin="24, 24, 24, 0"/>
        <Grid Grid.Row="2" Margin="24, 24, 24, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0, 0, 0, 5" FontWeight="DemiBold" Text="Invoerbestand"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="375" Height="32" Background="White" BorderThickness="2" BorderBrush="DimGray">
                        <TextBox x:Name="InputTextBox" Padding="7, 5, 7, 5" Text="{Binding InputFilePath}"/>
                    </Border>
                    <Button Grid.Column="1" Margin="6, 0, 0, 0" Width="32" Height="32" Click="OnInputFileOpenButtonClicked">
                        ...
                    </Button>
                </Grid>
                <TextBlock Grid.Row="2" Margin="0, 15, 0, 5" FontWeight="DemiBold" Text="Uitvoerbestand"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="375" Height="32" Background="White" BorderThickness="2" BorderBrush="DimGray">
                        <TextBox x:Name="OutputTextBox" Padding="7, 5, 7, 5" Text="{Binding OutputFilePath}"/>
                    </Border>
                    <Button Grid.Column="1" Margin="6, 0, 0, 0" Width="32" Height="32" Click="OnOutputFileOpenButtonClicked">
                        ...
                    </Button>
                </Grid>
            </Grid>
            <Grid Column="1" Margin="32, 0, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0, 0, 0, 5" FontWeight="DemiBold">
                    Opties
                </TextBlock>
                <Grid Grid.Row="1" Width="413" Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <mah:ToggleSwitch x:Name="ValidateJson" VerticalAlignment="Center" Grid.Column="0">
                        Valideren Json-formaat
                    </mah:ToggleSwitch>
                    <mah:ToggleSwitch x:Name="WriteMetadata" VerticalAlignment="Center" Grid.Column="1">
                        Schrijven meta-informatie
                    </mah:ToggleSwitch>
                </Grid>
                <TextBlock Grid.Row="2" Margin="0, 15, 0, 5" FontWeight="DemiBold">
                    Uitvoerniveau
                </TextBlock>
                <Grid Grid.Row="3" Width="413" Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="Falen" Grid.Column="0" GroupName="UitvoerNiveau">
                        Falen
                    </RadioButton>
                    <RadioButton x:Name="Schade" Grid.Column="1" GroupName="UitvoerNiveau" IsChecked="True">
                        Schade
                    </RadioButton>
                    <RadioButton x:Name="Fysica" Grid.Column="2" GroupName="UitvoerNiveau">
                        Fysica
                    </RadioButton>
                </Grid>
            </Grid>
            <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="StartButton" Width="65" Height="32"
                    IsEnabled="False" Click="OnStartButtonClicked">
                Start
            </Button>
        </Grid>
        <ListView Grid.Row="3" Margin="24, 12, 24, 0" ItemsSource="{Binding StringList, UpdateSourceTrigger=PropertyChanged}"/>
        <Grid Grid.Row="4" Margin="24, 12, 24, 24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Width="84" Height="32" Click="OnEraseButtonClicked">
                Wissen
            </Button>
            <Button Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 12, 0" Width="180" Height="32" Click="OnCopyButtonClicked">
                Kopieer naar klembord
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>