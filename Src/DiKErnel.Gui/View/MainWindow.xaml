<mah:MetroWindow x:Class="DiKErnel.Gui.View.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:viewModel="clr-namespace:DiKErnel.Gui.ViewModel"
                 xmlns:output="clr-namespace:DiKErnel.KernelWrapper.Json.Output;assembly=DiKErnel.KernelWrapper.Json.Output"
                 xmlns:view="clr-namespace:DiKErnel.Gui.View" MinWidth="1024" MinHeight="768" Width="1024" Height="768"
                 Title="DiKErnel-gui" TitleCharacterCasing="Normal" WindowTransitionsEnabled="False">
    <mah:MetroWindow.Resources>
        <view:ComparisonConverter x:Key="ComparisonConverter"/>
    </mah:MetroWindow.Resources>
    <mah:MetroWindow.DataContext>
        <viewModel:MainWindowViewModel/>
    </mah:MetroWindow.DataContext>
    <Grid Background="{DynamicResource MahApps.Brushes.Gray9}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="24, 24, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <svgc:SvgViewbox Grid.Column="0" Width="110" Height="110" Source="/Resources/logo.svg"/>
            <Grid Column="1" Margin="30, 0, 0, 0" Width="70" Height="110">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Doel" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Grid.Row="1" Text="Versie" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Grid.Row="2" Text="Bedrijf" VerticalAlignment="Center" FontWeight="DemiBold"/>
                <TextBlock Grid.Row="3" Text="Contact" VerticalAlignment="Center" FontWeight="DemiBold"/>
            </Grid>
            <Grid Grid.Column="2" Margin="20, 0, 0, 0" Width="125" Height="110">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Demonstratie" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Text="{x:Static viewModel:MainWindowViewModel.VersionNumber}" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Text="Deltares" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" VerticalAlignment="Center">
                    <Hyperlink NavigateUri="mailto:dikernel@deltares.nl" RequestNavigate="OnRequestNavigate">dikernel@deltares.nl</Hyperlink>
                </TextBlock>
            </Grid>
            <Border Grid.Column="3" BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Gray7}" Margin="20, 0, 0, 0"
                    Width="600" Height="110">
                <TextBlock Margin="10, 6, 10, 6" TextWrapping="Wrap" TextAlignment="Justify" FontSize="12">
                    <Bold>Disclaimer: </Bold>
                    De ALPHA versie van DiKErnel is nog in de testfase en zal op vele onderdelen nog moeten worden verbeterd en uitgebreid.
                    Het doel van deze ALPHA versie is om feedback te ontvangen op het huidige functioneren en om tekortkomingen te detecteren.
                    DiKErnel dient met de grootst mogelijke voorzichtigheid te worden geïnstalleerd en gebruikt. Op geen enkele manier mag er
                    worden vertrouwd op de beschikbare resultaten, de bijgeleverde softwaredocumentatie en al het andere materiaal dat bij
                    deze versie beschikbaar wordt gesteld.
                </TextBlock>
            </Border>
        </Grid>
        <Separator Grid.Row="1" Margin="24, 24, 24, 0"/>
        <Grid Grid.Row="2" Margin="24, 24, 24, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0, 0, 0, 5" FontWeight="DemiBold" Text="Invoerbestand"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="375" Height="32" Background="{DynamicResource MahApps.Brushes.IdealForeground}"
                            BorderThickness="2" BorderBrush="{DynamicResource MahApps.Brushes.Gray2}">
                        <TextBox Padding="7, 5, 7, 5" Text="{Binding InputFilePath}" Foreground="{Binding InputFilePathForeground}"
                                 TextChanged="OnTextChanged"/>
                    </Border>
                    <Button Grid.Column="1" Margin="6, 0, 0, 0" Width="32" Height="32" Click="OnSelectInputFileButtonClicked">
                        ...
                    </Button>
                </Grid>
                <TextBlock Grid.Row="2" Margin="0, 15, 0, 5" FontWeight="DemiBold" Text="Uitvoerbestand"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="375" Height="32" Background="{DynamicResource MahApps.Brushes.IdealForeground}"
                            BorderThickness="2" BorderBrush="{DynamicResource MahApps.Brushes.Gray2}">
                        <TextBox Padding="7, 5, 7, 5" Text="{Binding OutputFilePath}" Foreground="{Binding OutputFilePathForeground}"
                                 TextChanged="OnTextChanged"/>
                    </Border>
                    <Button Grid.Column="1" Margin="6, 0, 0, 0" Width="32" Height="32" Click="OnSelectOutputFileButtonClicked">
                        ...
                    </Button>
                </Grid>
            </Grid>
            <Grid Column="1" Margin="32, 0, 0, 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0, 0, 0, 5" FontWeight="DemiBold">
                    Opties
                </TextBlock>
                <Grid Grid.Row="1" Width="413" Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <mah:ToggleSwitch Grid.Column="0" IsOn="{Binding ValidateJsonInput}" VerticalAlignment="Center">
                        Valideren Json-formaat
                    </mah:ToggleSwitch>
                    <mah:ToggleSwitch Grid.Column="1" IsOn="{Binding WriteMetadata}" VerticalAlignment="Center">
                        Schrijven meta-informatie
                    </mah:ToggleSwitch>
                </Grid>
                <TextBlock Grid.Row="2" Margin="0, 15, 0, 5" FontWeight="DemiBold">
                    Uitvoerniveau
                </TextBlock>
                <Grid Grid.Row="3" Width="413" Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <RadioButton Grid.Column="0" GroupName="OutputType"
                                 IsChecked="{Binding Path=OutputType, Converter={StaticResource ComparisonConverter},
                                 ConverterParameter={x:Static output:JsonOutputType.Failure}}">
                        Falen
                    </RadioButton>
                    <RadioButton Grid.Column="1" GroupName="OutputType"
                                 IsChecked="{Binding Path=OutputType, Converter={StaticResource ComparisonConverter},
                                 ConverterParameter={x:Static output:JsonOutputType.Damage}}">
                        Schade
                    </RadioButton>
                    <RadioButton Grid.Column="2" GroupName="OutputType"
                                 IsChecked="{Binding Path=OutputType, Converter={StaticResource ComparisonConverter}, 
                                 ConverterParameter={x:Static output:JsonOutputType.Physics}}">
                        Fysica
                    </RadioButton>
                </Grid>
            </Grid>
            <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="65" Height="32"
                    IsEnabled="{Binding CanCalculate}" Click="OnStartButtonClicked">
                Start
            </Button>
        </Grid>
        <ListView Grid.Row="3" Margin="24, 12, 24, 0" ItemsSource="{Binding LogMessages}" ScrollViewer.ScrollChanged="OnScrollChanged"/>
        <Grid Grid.Row="4" Margin="24, 12, 24, 24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Width="84" Height="32" Click="OnEraseButtonClicked">
                Wissen
            </Button>
            <Button Grid.Column="0" HorizontalAlignment="Right" Margin="0, 0, 12, 0" Width="180" Height="32" Click="OnCopyButtonClicked">
                Kopieer naar klembord
            </Button>
        </Grid>
    </Grid>
</mah:MetroWindow>